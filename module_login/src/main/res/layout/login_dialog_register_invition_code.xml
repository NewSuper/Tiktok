<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/login_bg_tips"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textColor="#FF333333"
                android:textSize="15sp"
                tools:text="确认邀请人信息" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_old_info"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/txt_old_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/please_enter_verification_code"
                    android:paddingLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/txt_old_code"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="21dp"
                        android:background="#999999" />

                    <ImageView
                        android:id="@+id/iv_old_header"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="16dp"
                        tools:background="@color/common_black" />

                    <TextView
                        android:id="@+id/iv_old_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="50dp"
                        android:gravity="left"
                        android:textColor="#FF333333"
                        android:textSize="14sp"
                        tools:text="知有" />
                </LinearLayout>

                <View
                    android:id="@+id/view_mask"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@drawable/login_shape_transparent_f7f7f7_5dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#E1E1E1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_replace_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:gravity="left"
                android:text="将替换成以下邀请人"
                android:textColor="#FF666666"
                android:textSize="12sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_new_info"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/login_shape_f7f7f7_5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/txt_new_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/please_enter_verification_code"
                    android:paddingLeft="10dp"
                    android:textColor="#333333"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/txt_new_code"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="21dp"
                        android:background="#999999" />

                    <ImageView
                        android:id="@+id/iv_new_header"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="16dp"
                        tools:background="@color/common_black" />

                    <TextView
                        android:id="@+id/iv_new_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="50dp"
                        android:gravity="left"
                        android:textColor="#FF333333"
                        android:textSize="14sp"
                        tools:text="知有" />
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/login_bg_invition_code_input"
                android:gravity="left|center_vertical"
                android:hint="@string/enter_invitation_code"
                android:paddingLeft="10dp"
                android:textColor="#333333"
                android:textColorHint="#FFB8B8B8"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/txt_error_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="left"
                android:paddingLeft="32dp"
                android:text="@string/login_verification_code_error"
                android:textColor="#FFF26353"
                android:textSize="11sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <View
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/common_divider" />

            <LinearLayout
                android:id="@+id/bottom_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_left_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/login_bg_dialog_left_bottom"
                    android:gravity="center"
                    android:text="@string/common_cancel"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/line"
                    android:layout_width="0.3dp"
                    android:layout_height="match_parent"
                    android:background="@color/common_divider" />

                <LinearLayout
                    android:id="@+id/ll_right_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/login_bg_dialog_right_bottom"
                        android:gravity="center"
                        android:text="@string/sures"
                        android:textColor="#B8B8B8"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:visibility="gone"
                        android:id="@+id/progressBar1"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginLeft="10dp"
                        android:indeterminateBehavior="repeat"
                        android:indeterminateDrawable="@drawable/login_dialog_loading_blue"
                        android:indeterminateOnly="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>