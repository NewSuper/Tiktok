<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.AddUserInfoActivity">

        <com.aitd.library_common.widget.BaseToolBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="@string/setting_user_info" />

        <RelativeLayout
            android:id="@+id/rl_avator"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="72dp"
            android:onClick="viewOnclick">

            <com.aitd.library_common.widget.CircleImageView
                android:id="@+id/iv_avator"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/login_ic_head_default" />

            <ImageView
                android:id="@+id/iv_edit_avator"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:scaleType="fitXY"
                android:src="@mipmap/login_ic_head_edit" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="46dp"
            android:divider="@drawable/shape_ddd_1dp"
            android:orientation="vertical"
            android:showDividers="middle|end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/sex"
                    android:textColor="#FF999999"
                    android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_sex_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_5083fc_14dp"
                        android:gravity="right"
                        android:onClick="viewOnclick"
                        android:paddingLeft="22dp"
                        android:paddingTop="4dp"
                        android:paddingRight="22dp"
                        android:paddingBottom="4dp"
                        android:text="@string/man"
                        android:textColor="@color/common_white"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="#DDDDDD" />

                    <TextView
                        android:id="@+id/txt_sex_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:onClick="viewOnclick"
                        android:paddingLeft="22dp"
                        android:paddingTop="4dp"
                        android:paddingRight="22dp"
                        android:paddingBottom="4dp"
                        android:text="@string/female"
                        android:textColor="@color/common_text_gray_66"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/nickname"
                    android:textColor="#FF999999"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:hint="@string/input_nickname"
                    android:textColorHint="@color/common_text_gray_66"
                    android:textColor="#FF333333"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp"
                android:onClick="viewOnclick"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/region"
                    android:textColor="#FF999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_region"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#FF333333"
                    android:textSize="16sp"
                    tools:text="中国 香港" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/common_ic_item_next" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_next"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="46dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="46dp"
            android:background="@drawable/selector_blue"
            android:enabled="false"
            android:gravity="center"
            android:onClick="viewOnclick"
            android:text="@string/next"
            android:textColor="#ffffffff"
            android:textSize="15sp" />
    </LinearLayout>
</layout>