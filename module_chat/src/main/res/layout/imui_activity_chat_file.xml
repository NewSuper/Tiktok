<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_title_bar"
        layout="@layout/imui_common_title_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_file_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:src="@drawable/vector_file_apk"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_40"
        android:ellipsize="middle"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_3"
        android:maxLines="2"
        android:textColor="@color/message_content_text"
        android:textSize="@dimen/dp_18"
        android:textStyle="bold"
        tools:text="" />

    <TextView
        android:id="@+id/tv_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/color_333"
        android:textSize="@dimen/sp_14"
        tools:text="0.0" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginBottom="150dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_action"
            android:layout_width="178dp"
            android:layout_height="40dp"
            android:background="@drawable/shape_layerlist_blue_6dp"
            android:gravity="center"
            android:text="@string/chat_file_detail_download"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/loading_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="180dp"
            android:layout_height="4dp"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/progres_bg"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>