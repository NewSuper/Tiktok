<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_time_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="消息已发出，被对方拒收了。"
        android:textColor="@color/message_time_text_color"
        android:textSize="@dimen/message_time_text_size"
        android:layout_marginBottom="@dimen/message_time_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>