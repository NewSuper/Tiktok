<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/imui_common_title_bar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f4f5f7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp_16"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llSelectCoin"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:background="@drawable/shape_white_8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|left">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/dp_18"
                            android:text="@string/qx_redpacket"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/sp_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center|right"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivCoinIcon"
                            android:layout_width="@dimen/dp_22"
                            android:layout_height="@dimen/dp_22"
                            android:src="@mipmap/aitd_icon"/>

                        <TextView
                            android:id="@+id/tvCoinName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:textColor="@color/color_333"
                            android:textSize="@dimen/sp_16"
                            android:text="AITD"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_marginRight="@dimen/dp_12"
                            android:src="@mipmap/me_next" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_white_8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="18dp"
                        android:text="@string/xintuo_notice_2"
                        android:textColor="#333333"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/etAmount"
                        android:layout_width="0dip"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:inputType="number"
                        android:hint="@string/qx_redpacket_input_money"
                        android:textColor="@color/color_333"
                        android:textColorHint="@color/color_999"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMaxTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_9"
                    android:text="@string/qx_redpacket_max"
                    android:textColor="#E9614C"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_white_8dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/etContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginRight="18dp"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="@string/qx_redpacket_wish_words"
                        android:textColor="@color/color_333"
                        android:textColorHint="#999999"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_45"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_333"
                        android:textSize="40sp"
                        android:textStyle="normal"
                        android:typeface="serif" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/dp_25"
                    android:background="@drawable/selector_send_redpacket"
                    android:text="@string/linghongbao"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
