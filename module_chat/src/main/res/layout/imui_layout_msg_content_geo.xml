<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/message_content_max_width"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_geo_msg_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/message_content_text"
        android:textSize="@dimen/name_msg_geo_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="金达科技中心金达科技中心金达科技中心金达科技中心金达科技中心"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"/>

    <TextView
        android:id="@+id/tv_geo_msg_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/message_geo_address"
        android:textSize="@dimen/name_msg_geo_address"
        app:layout_constraintLeft_toLeftOf="@id/tv_geo_msg_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_geo_msg_title"
        tools:text="深圳科技园深圳科技园深圳科技园深圳科技园深圳科技园深圳科技园深圳科技园深圳科技园深圳科技园深圳科技园深圳科技园深圳科技园"
        android:layout_marginTop="@dimen/dp_2"/>

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_97"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_geo_msg_address"
        android:layout_marginTop="@dimen/dp_4"/>

</androidx.constraintlayout.widget.ConstraintLayout>
