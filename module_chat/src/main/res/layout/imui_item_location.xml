<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvLocationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:duplicateParentState="true"
        android:textColor="@drawable/imui_text_333_5083fc_selector"
        android:textSize="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="金达科技中心" />

    <TextView
        android:id="@+id/tvLocationDescri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_10"
        android:duplicateParentState="true"
        android:textColor="@drawable/imui_text_999_5083fc_selector"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationTitle"
        tools:text="深圳市南山区科丰路8号" />

    <ImageView
        android:id="@+id/ivLocationChecked"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_20"
        android:src="@drawable/imui_locaion_checked"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="20dp"
        android:background="@color/color_ccc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLocationDescri" />

</androidx.constraintlayout.widget.ConstraintLayout>