<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/common_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="WebViewLayout">
    <WebView
        android:id="@+id/web"
        android:minHeight="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="#F1F1F1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="58dp">
        <TextView
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#999999"
            android:text="阅读"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:id="@+id/ly_recommend_share"
            android:gravity="center"
            android:layout_toLeftOf="@+id/ly_recommend_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ic_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:layout_marginRight="24dp"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="分享"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ly_recommend_like"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ic_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="3dp"
                android:id="@+id/tv_discover_like"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="赞"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:background="#F9F9F9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#999999"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="15dp"
            android:text="@string/discover_leaving_message"
            android:layout_marginTop="29dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_Write_message"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:textColor="#5083FC"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="15dp"
            android:text="@string/discover_write_leaving_message"
            android:layout_marginTop="29dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>