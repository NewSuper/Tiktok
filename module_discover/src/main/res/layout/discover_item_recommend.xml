<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="left"
            android:id="@+id/ly_recommend_title"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintEnd_toStartOf="@+id/img_recommend_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:textSize="15sp"
                android:textColor="#FF500F"
                android:layout_marginRight="5dp"
                android:id="@+id/tv_recommend_top"
                android:text="@string/discover_recommend_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_recommend_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:textSize="13sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_recommend_time"
            app:layout_constraintStart_toStartOf="@id/ly_recommend_title"
            app:layout_constraintBottom_toBottomOf="@id/img_recommend_picture"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="11sp"
            android:textColor="#999999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/img_recommend_picture"
            android:layout_marginRight="18dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="108dp"
            android:layout_height="76dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>