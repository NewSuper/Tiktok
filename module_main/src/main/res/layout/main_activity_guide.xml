<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".GuideActivity">

        <TextView
            android:id="@+id/tv_guide_language_choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:onClick="viewOnclick"
            android:padding="8dp"
            android:text="@string/common_language_choice"
            android:textColor="#333333"
            android:textSize="15sp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_guide_pager"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:overScrollMode="never" />

        <com.aitd.module_main.widget.PageIndicatorView
            android:id="@+id/piv_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_guide_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_blue_radiu_6"
                android:gravity="center"
                android:onClick="viewOnclick"
                android:text="@string/common_login"
                android:textColor="#FFFFFF"
                android:textSize="15sp" />

            <View
                android:layout_width="17dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_guide_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/common_white_stroke_radiu_6"
                android:gravity="center"
                android:onClick="viewOnclick"
                android:text="@string/common_register"
                android:textColor="#5083FC"
                android:textSize="15sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="40dp"
                android:src="@mipmap/main_ic_common_foot_logo" />
        </FrameLayout>
    </LinearLayout>
</layout>