<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Main.Theme.AITDBlock" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_purple_500</item>
        <item name="colorPrimaryVariant">@color/main_purple_700</item>
        <item name="colorOnPrimary">@color/main_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_teal_200</item>
        <item name="colorSecondaryVariant">@color/main_teal_700</item>
        <item name="colorOnSecondary">@color/main_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--splash专用主题-->
    <style name="Main.Splash.Theme" parent="Theme.CommonAppCompatTheme">
        <item name="android:windowBackground">@drawable/main_splash_start_layer</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>