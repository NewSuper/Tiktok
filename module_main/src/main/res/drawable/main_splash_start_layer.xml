<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <color android:color="@color/common_white" />
    </item>
    <item
        android:id="@+id/splash_top"
        android:height="420dp"
        android:gravity="top|fill_horizontal|right">
        <bitmap android:src="@mipmap/main_ic_splash_top" />
    </item>

    <item
        android:gravity="bottom|center"
        android:bottom="100dp">
        <bitmap android:src="@mipmap/main_ic_splash_content" />
    </item>

    <item
        android:bottom="40dp"
        android:gravity="bottom|center">
        <bitmap android:src="@mipmap/main_ic_common_foot_logo" />
    </item>
</layer-list>